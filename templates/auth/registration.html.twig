<div id="registrationModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">S'enregistrer</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12 col-md-10 mx-auto">
            <form action="/authentification/inscription" method="post">
              <div class="form-group form-control-sm">
                <label for="login">Nom d'utilisateur</label>
                <input class="form-control form-control-sm" name="login" id="login" type="login" required>
              </div>
              <div class="form-group form-control-sm">
                <label for="email">Adresse e-mail</label>
                <input class="form-control form-control-sm" name="email" id="email" type="email" required>
              </div>
              <div class="form-group form-control-sm">
                <label for="psw">Cr√©er un mot de passe</label><br>
                <input class="form-control form-control-sm" name="psw" id="psw" type="password" minlength=8 required>
              </div>
              <div class="form-group form-control-sm">
                <label for="psw2">Confirmez votre mot de passe</label>
                <input class="form-control form-control-sm" name="psw2" id="psw2" type="password" required>
              </div>
              <div class="text-center">
              	<input class="btn btn-primary btn-sm" type="submit" value="S'inscrire">
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="modal-footer">
    	<div class="row">
    		<div class="col-8">
                <p><small class="text-muted"><span class="modal-link" id="connexion">Se connecter</span></small></p>
                <script>
                    $("#connexion").on("click", function(){
                        $("#modal-container").load("/connexion",function(response){
                            $(".modal-backdrop").remove();
                            $("#connectionModal").modal({show:true});
                        });
                    });
                </script>
            </div>
        	<div class="col-4">
          		<button type="button" class="btn btn-default btn-sm text-right" data-dismiss="modal">Close</button>
        	</div>
    	</div>
      </div>
    </div>
  </div>
</div>