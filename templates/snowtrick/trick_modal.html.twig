  <!-- The Modal Trick -->
    <!-- Modal -->
  <div class="modal fade" id="modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
	        <header style="background-image:url('{{ asset('img/trick/1.jpg') }}');">
				<div class="contents-header">
	    			<h1 class="header-title text-center">Mute</h1>
	    		</div>
			</header>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
		<!-- Trick Medias -->
        <div class="modal-body">
			<section class="container-fluid">
				<div class="row justify-content-md-center">
					{% for img in trick.img %}
						<div class="col-6 col-md-4 col-lg-2 media mx-auto">
							<img src="{{ asset('img/trick-name/') }}{{ img.path }}" alt="{{ img.alt }}" class="rounded img-fluid">
						</div>
					{% endfor %}
{# 					{% for video in trick.video %}
						<div class="col-6 col-md-3 col-lg-2 media embed-responsive embed-responsive-16by9">
							{{ video|raw }}
						</div>
					{% endfor %} #}
				</div>
			</section>
			<!-- Trick Description -->
			<section class="container" id="trick-description">
				<div class="row">
					<div class="col-10 mx-auto">
						<p>{{ trick.content }}</p>
		    		<div class="trick-infos">
		          <p><small><strong>Groupe : 
		            {% for group in trick.group %}
		            	<a href="#" class="badge badge-light">{{ group|capitalize }}</a>
		        	{% endfor %}
		          </strong></small></p>
		          <p><small><strong>Auteur : {{ trick.author }}, le {{ trick.date_create | date("F jS \\à g:ia") }}
		          </strong></small></p>
		        </div>
		      </div>
		    </div>
			</section>
			<!-- Trick Comments -->
			<section id="comments">
				<div class="container">
				  <div class="row">
				    <div class="col-md-10 col-lg-8 mx-auto">
				      <h3>Commentaires :</h3>
				        <form action="" method="post" class="form-inline">
				          <div class="form-group">
				            <input type="text" name="author" class="form-control col-3" placeholder="Votre nom" required>
				            <textarea name="content" class="form-control col-7" placeholder="Écrire un commentaire..." rows="1" required></textarea>
				            <button type="submit" class="btn btn-primary col-2">Poster</button>
				          </div>
				      </form>
				        {% for comment in comments %}
				          <div class="row">
				            <div class="col-2 avatar">
				              <div class="">
				                <img src="{{ asset('img/avatar/') }}{{ comment.avatar }}" alt="{{ comment.alt }}" class="rounded img-fluid ">
				              </div>
				            </div>
				            <div class="col-10 comment-content">
				              <p class="comment">{{ comment.content }}</p>
				              <p class="text-right infos"><strong>Par {{ comment.author }},  le {{ comment.date|date("F jS \\à g:ia") }}</strong></p>
				            </div>
				          </div>
				        {% endfor %}
				    </div>
				  </div>
				</div>
			</section>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" style="text-center">Close</button>
        </div>
      </div>
    </div>
  </div>