<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Trick" table="st_trick" repository-class="App\Domain\Repository\TrickRepository">

        <id name="id" type="uuid" />
        <field name="title" type="string" length="255" unique="true" />
        <field name="slug" type="string" length="255" unique="true" />
        <field name="description" type="text" />
        <field name="createdAt" column="date_creation" type="string" />
        <field name="updatedAt" column="date_update" type="string" />

        <many-to-one field="author" target-entity="App\Domain\Entity\User" inversed-by="tricks">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column nullable="false" />
        </many-to-one>

        <one-to-one field="mainPicture" target-entity="App\Domain\Entity\Picture">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column />
        </one-to-one>

        <many-to-many field="pictures" target-entity="App\Domain\Entity\Picture" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="st_tricks_pictures">
                <join-columns>
                    <join-column name="trick_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="picture_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="videos" target-entity="App\Domain\Entity\Video" mapped-by="trick" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many field="comments" target-entity="App\Domain\Entity\Comment" mapped-by="trick" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="createdAt" direction="DESC"/>
            </order-by>
        </one-to-many>

        <many-to-many field="groups" inversed-by="tricks" target-entity="Group" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="st_tricks_groups">
                <join-columns>
                    <join-column name="trick_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="group_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
            <order-by>
                <order-by-field name="name" direction="ASC"/>
            </order-by>
        </many-to-many>

    </entity>

</doctrine-mapping>
