<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\User" table="st_user" repository-class="App\Domain\Repository\UserRepository">

        <id name="id" type="uuid" />

        <field name="username" type="string" length="255" unique="true" />
        <field name="email" column="email" type="string" unique="true" />
        <field name="password" type="string" />
        <field name="createdAt" column="date_creation" type="datetime" />
        <field name="token" type="string" unique="true" />
        <field name="roles" type="string" />
        <field name="validated" type="boolean" />
        <field name="enabled" type="boolean" />

        <one-to-one field="picture" target-entity="Picture">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>

        <many-to-one field="comments" target-entity="App\Domain\Entity\Comment" inversed-by="author" />
        <many-to-one field="tricks" target-entity="App\Domain\Entity\Trick" inversed-by="author" />

    </entity>
</doctrine-mapping>